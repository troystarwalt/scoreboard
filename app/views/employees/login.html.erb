<p id="notice"><%= notice %></p>

<% provide(:title, "Log In") %>
<h1>Employee Login </h1>

<div class="user_forms" >
<%= form_tag 'login/' do %>

<%= label_tag "name" %>
<%= text_field_tag "name" %>

<%= label_tag "password" %>
<%= password_field_tag "password" %>

<%= submit_tag 'Log In' %>
<% end %>

</div>